<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- 控制台日志 -->
	<appender name="consolelog" class="org.apache.log4j.ConsoleAppender"> 
		<param name="encoding" value="UTF-8" /> 
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss} %m %n %l"/> 
		</layout> 
		<filter class="org.apache.log4j.varia.LevelRangeFilter"> 
			<param name="LevelMax" value="ERROR"></param> 
			<param name="LevelMin" value="INFO  "></param> 
			<param name="AcceptOnMatch" value="true" /> 
		</filter> 
	</appender>
	<!-- 全部日志 -->
	<appender name="normal_log_file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="encoding" value="UTF-8" />
		<param name="File" value="${log4j.path}/phoenix-meeting/normal.log" />
		<param name="DatePattern" value=".yyyyMMddHH" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyyMMddHHmmss} %p %c %t %m%n" />
		</layout>
	</appender>
	<logger name="com.ginkgocap.ywxt">
		<level value="INFO"></level>
	</logger>
	<logger name="com.ibatis" additivity="true">

		<level value="INFO" />

	</logger>

	<logger name="java.sql.Connection" additivity="true">

		<level value="INFO" />

	</logger>

	<logger name="java.sql.Statement" additivity="true">

		<level value="INFO" />

	</logger>

	<logger name="java.sql.PreparedStatement" additivity="true">

		<level value="INFO" />

	</logger>

	<logger name="java.sql.ResultSet" additivity="true">

		<level value="INFO" />

	</logger>
	<root>
		<level value="INFO" />
		<appender-ref ref="normal_log_file" />
		<appender-ref ref="consolelog" />
	</root>
</log4j:configuration>
